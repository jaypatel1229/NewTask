<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"  
>
    <TextView
        android:id="@+id/textViewDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDashboard"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
    />
    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        
    >
    <ImageView
        android:id="@+id/imageViewDashboard"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/abc"
    />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOne"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@+id/textViewDashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#2c62ff"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="70dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 500"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
        />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/statistics"
            android:tint="@android:color/white"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
        />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="262dp"
            android:layout_height="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:indeterminate="false"
            android:progress="70"
            android:max="100"
            android:scrollbarSize="100dp"
            android:visibility="visible"
            android:background="#9016"
            android:progressDrawable="@drawable/progress"
            android:id="@+id/progressBar2" 
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily spend Target: $16.67"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
        />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardViewOne"
        app:layout_constraintStart_toStartOf="@+id/cardViewOne"
        android:text="DAILY SPENDS"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_marginTop="50dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardViewOne"
        app:layout_constraintEnd_toEndOf="@+id/cardViewOne"
        android:text="See All"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#2c62ff"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
    />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="@+id/cardViewOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="228dp"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="220dp"/>          
    </androidx.cardview.widget.CardView>
    
        
   <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/bottonNavigationViewInterns"
        android:layout_height="84dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewApplyLeave"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ffffff"
        app:menu="@menu/menubar"
        app:itemIconTint="@drawable/selector"
        
  />
   
</androidx.constraintlayout.widget.ConstraintLayout>