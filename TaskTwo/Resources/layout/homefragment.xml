<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="85dp"  
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/textViewDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDashboard"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
    />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        
    >
    <ImageView
        android:id="@+id/imageViewDashboard"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/abc"
    />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOne"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@+id/textViewDashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/skyBlue"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="70dp"
    >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/january"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myprice"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
        />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
           android:src="@drawable/statistics"
            android:tint="@color/white"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
        />
        <TextView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:text="70%"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:layout_marginTop="70dp"
        />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="80dp"
            android:indeterminate="false"
            android:progress="70"
            android:max="100"            
            android:background="@color/navyblue"
            android:progressDrawable="@drawable/progress"
            android:id="@+id/progressBar2" 
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dailyspendtarget"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
        />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardViewOne"
        app:layout_constraintStart_toStartOf="@+id/cardViewOne"
        android:text="@string/dailyspends"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_marginTop="40dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardViewOne"
        app:layout_constraintEnd_toEndOf="@+id/cardViewOne"
        android:text="@string/seeAll"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/skyBlue"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
    />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="@+id/cardViewOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="215dp"
    >
        <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/parryRed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_bank"
            />
            
        </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textViewName" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Net Banking"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
    />
    <TextView
        android:id="@+id/textViewPrice" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$365.89"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="90dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="today"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
    />
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="84dp"
        >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_hotel"
            />
            
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textViewHotelPrice" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food and Drink"
            android:textSize="13sp"
            android:textStyle="bold"
            
            android:layout_marginTop="85dp"
            android:layout_marginLeft="90dp"
        />
        <TextView
            android:id="@+id/textViewHotel" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$165.99"
            android:textStyle="bold"
        
            android:layout_marginTop="110dp"
            android:layout_marginLeft="90dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Jan 2019"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="90dp"
        />
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
        >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_dress"
            />
            
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textViewhotelPrice" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloths"
            android:textSize="13sp"
            android:textStyle="bold"
            
            android:layout_marginTop="151dp"
            android:layout_marginLeft="90dp"
        />
        <TextView
            android:id="@+id/textViewhotel" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$65.09"
            android:textStyle="bold"
           
            android:layout_marginTop="180dp"
            android:layout_marginLeft="90dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15Jan 2019"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="160dp"
        />
    </androidx.cardview.widget.CardView>
    <TextView
            android:id="@+id/textViewOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wishlist"
        app:layout_constraintTop_toBottomOf="@+id/cardViewOne"
        app:layout_constraintStart_toStartOf="@+id/cardViewOne"
        android:layout_marginTop="300dp"
        android:textStyle="bold"
        android:textSize="13sp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardViewOne"
        app:layout_constraintEnd_toEndOf="@+id/cardViewOne"
        android:text="@string/seeAll"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/skyBlue"
        android:layout_marginTop="300dp"
        android:layout_marginRight="15dp"
    />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewOne" 
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
        >
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimageZero"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/skyBlue"
                android:layout_width="70dp"
                android:layout_height="70dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_height="70dp">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        
                        android:src="@drawable/ic_tshirt"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Tee"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/gym"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/green"
                android:layout_width="70dp"
                android:layout_height="70dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_height="70dp">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        
                        android:src="@drawable/ic_gym"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Gym"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/motercycle"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/gold"
                android:layout_width="70dp"
                android:layout_height="70dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_height="70dp">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        
                        android:src="@drawable/ic_bike"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Bike"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/money"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/parryRed"
                android:layout_width="70dp"
                android:layout_height="70dp"
            >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_height="70dp">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
      
                        android:src="@drawable/ic_money"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Saving"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/bank"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/skyBlue"
                android:layout_width="70dp"
                android:layout_height="70dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_height="70dp">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        
                        android:src="@drawable/ic_bank"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Bank"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/dinner"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/green"
                android:layout_width="70dp"
                android:layout_height="70dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_height="70dp">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        
                        android:src="@drawable/ic_hotel"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Resturent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cloths"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/gold"
                android:layout_width="70dp"
                android:layout_height="70dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_height="70dp">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        
                        android:src="@drawable/ic_dress"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Cloths"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>